SET(GCC_COVERAGE_COMPILE_FLAGS
"P" "-fprofile-arcs -ftest-coverage")
SET(GCC_COVERAGE_LINK_FLAGS
"P" "-lgcov")
SET(CMAKE_CXX_FLAGS
"P" "${CMAKE_CXX_FLAGS}
"P" ${GCC_COVERAGE_COMPILE_FLAGS}" )
SET(CMAKE_EXE_LINKER_FLAGS
"P" "${CMAKE_EXE_LINKER_FLAGS}
"P" ${GCC_COVERAGE_LINK_FLAGS}" )
SET(CMAKE_CXX_OUTPUT_EXTENSION_REPLACE 1)
